# Copy this file to `.env` (or `.env.local`) and replace placeholder values.

# Deepgram API key used for transcription; required for the pipeline and web app.
DEEPGRAM_API_KEY=dg_your_api_key_here

# Optional: override the transcription model (defaults to nova-2).
PIPELINE_MODEL=nova-2

# Controls log verbosity for both the pipeline and import/export utility.
PIPELINE_LOG_LEVEL=INFO

# Credentials protecting the `/feeds` admin dashboard in the Flask app.
FEED_ADMIN_USER=admin
FEED_ADMIN_PASS=change-me

# Optional Flask configuration overrides.
# FLASK_ENV=production
# FLASK_RUN_PORT=8000
